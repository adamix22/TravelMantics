<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="146dp"
            android:layout_height="106dp" app:srcCompat="@drawable/ic_image_black_24dp"
            android:id="@+id/deal_image" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deal_region" android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@+id/deal_image" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deal_place_name" android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@+id/deal_image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/deal_region"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/deal_price" android:layout_marginStart="100dp"
            app:layout_constraintStart_toEndOf="@+id/deal_place_name" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>